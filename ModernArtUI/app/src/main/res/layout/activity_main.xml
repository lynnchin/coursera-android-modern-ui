<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity"
    android:background="@color/background_material_dark">


    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:background="@color/light_pink"
            android:tag="@color/light_pink"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="100dip"
            android:layout_height="200dip"
            android:id="@+id/view1">
        </View>

        <View
            android:background="@color/light_blue"
            android:tag="@color/light_blue"
            android:layout_width="wrap_content"
            android:layout_height="100dip"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/view1"
            android:id="@+id/view2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
        </View>

        <View
            android:background="@color/atomic_tangerine"
            android:tag="@color/atomic_tangerine"
            android:layout_width="wrap_content"
            android:layout_height="100dip"
            android:layout_toRightOf="@+id/view1"
            android:layout_below="@+id/view2"
            android:id="@+id/view3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
        </View>
        <View
            android:background="@color/pear"
            android:tag="@color/pear"
            android:layout_width="wrap_content"
            android:layout_height="100dip"
            android:id="@+id/view4"
            android:layout_below="@+id/view1"
            android:layout_alignRight="@+id/view3"
            android:layout_alignEnd="@+id/view3">
        </View>
        <View
            android:background="@color/white"
            android:tag="@color/white"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:id="@+id/view5"
            android:layout_below="@+id/view4">
        </View>
        <View
            android:background="@color/dull_gray"
            android:tag="@color/dull_gray"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:id="@+id/view6"
            android:layout_toRightOf="@+id/view5"
            android:layout_below="@+id/view4">
        </View>

        <View
            android:background="@color/blood_red"
            android:tag="@color/blood_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view7"
            android:layout_toRightOf="@+id/view6"
            android:layout_below="@+id/view4">
        </View>

    </RelativeLayout>
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
